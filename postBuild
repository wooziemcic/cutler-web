#!/usr/bin/env bash
set -euxo pipefail

echo "postBuild starting in: $(pwd)"
echo "Python: $(python --version)"
echo "Installing Playwright Chromium into default cache..."

# IMPORTANT: no PLAYWRIGHT_BROWSERS_PATH override here.
# This installs to ~/.cache/ms-playwright, which is exactly where
# Playwright looks at runtime (your error path).

python -m playwright install chromium

echo "postBuild finished."
